<Window x:Class="OOP_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_Project"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource Locator}, Path=MainVm}"
        Title="Jewelry Inventory" Height="450" Width="800">
    <Grid Background="#FDF0D5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Button Height="20"
                    Width="150"
                    HorizontalAlignment="Right"
                    Margin="10"
                    Content="Transaction"
                    Command="{Binding ClickCommand}"></Button>     
            <Button Height="20"
                    Width="150"
                    HorizontalAlignment="Right"
                    Margin="10"
                    Content="Add New Jewelry"></Button>
            <TextBlock Text="{Binding Test, UpdateSourceTrigger=PropertyChanged}"
                       FontSize="30"
                       ></TextBlock>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <ListBox Height="200"
                     Margin="20">
            </ListBox>
            <StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Name: "></TextBlock>
                    <TextBlock Text=""></TextBlock>
                </StackPanel> 
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Price: "></TextBlock>
                    <TextBlock Text=""></TextBlock>
                </StackPanel> 
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="SRP: "></TextBlock>
                    <TextBlock Text=""></TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Stock Left: "></TextBlock>
                    <TextBlock Text=""></TextBlock>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Description:"></TextBlock>
                    <TextBlock></TextBlock>
                </StackPanel>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
